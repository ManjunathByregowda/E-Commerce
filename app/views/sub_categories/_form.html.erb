<div class="container">
  <div class="col-md-4">
    <%= form_for(@sub_category) do |f| %>
      <% if @sub_category.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@sub_category.errors.count, "error") %> prohibited this sub_category from being saved:</h2>

          <ul>
          <% @sub_category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :category_id %><br>
        <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "select"}, {class: "form-control"} %><br/>
      </div>
      
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %><br/>
      </div>
      
      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
