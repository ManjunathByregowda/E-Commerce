<div class="container">
	<div class="col-md-4">
	</div>
	<div class="col-md-4">
		<div class="page-header">
			<h1> Listing categories <small><%= @categories.length %></small> </h1>
		</div>
		<%= will_paginate @categories %>
		<ol>
		    <% @categories.each do |category| %>
			  <li><%= link_to category.name, category_path(category.id) %></li>
		    <%end%>
		</ol>

		<%if user_signed_in? && (current_user.is_admin?)%>
			<%= link_to "Add Categories", new_category_path, class: "btn btn-primary" %>
		<%end%>
	</div>
	<div class="col-md-4">
	</div>
</div> 
